@{
	ViewData["Title"] = "Employes";

}

@model Thales.UI.Models.ResponseEmployesModel

<div class="row">
	<form method="post">
		<div class="form-group">
			<label>Employe ID</label>
			<input type="number" class="form-control" name="EmployeId" placeholder="Enter id...">
		</div>
		<button type="submit" class="btn btn-primary" asp-action="GetEmployesAction">Search</button>
	</form>

	<div class="col-12">
		<br />
		<table id="tableEmployes" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
			<thead class="text-center">
				<tr>
					<th>Employe Name</th>
					<th>Employe Salary</th>
					<th>Employe Age</th>
					<th>Employe Anual Salary</th>
				</tr>
			</thead>
			<tbody class="text-center">
				@if (Model.Employes != null)
				{
					@foreach (var employe in Model.Employes)
					{
						<tr>
							<th>
								@employe.employee_name
							</th>
							<th>
								@employe.employee_salary
							</th>
							<th>
								@employe.employee_age
							</th>
							<th>
								@employe.Employee_anual_salary
							</th>
						</tr>
					}
				}
				else if (Model.Employe != null)
				{
					<tr>
						<th>
							@Model.Employe.employee_name
						</th>
						<th>
							@Model.Employe.employee_salary
						</th>
						<th>
							@Model.Employe.employee_age
						</th>
						<th>
							@Model.Employe.Employee_anual_salary
						</th>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


@section Scripts{
<script>
	$(document).ready(function () {
		if ('@Html.Raw(@Model.ErrorResponse)' != '' && '@Html.Raw(@Model.ErrorResponse)' != null && '@Html.Raw(@Model.ErrorResponse)' != undefined) {
			swal({
			  title: "An Error has ocurred from api service",
			  text: "@Html.Raw(Model.ErrorResponse)'",
			  icon: "warning",
			});
		}
	});
</script>
}